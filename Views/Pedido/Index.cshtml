@using Ecommerce.Models
@model Dictionary<int, ItemPedido>

@{
    Layout="~/Views/Shared/_Layout.cshtml";
}

<section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Products</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(KeyValuePair<int, ItemPedido> item in Model)
                                {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="/img/cart/cart-1.jpg" alt="">
                                        <h5>@item.Value.Produto.Nome</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @item.Value.Preco.ToString("c")
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <a href="#"><i class="fa fa-minus" style="color: black"></i></a>
                                                <input type="text" readonly value="@item.Value.Quantidade">
                                                <a href="#"><i class="fa fa-plus" style="color: black"></i></a>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        R$ ???
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <a href="#" class="fa fa-close" style="color:red"></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="/Product/Index" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                        <a href="/Customer/Create" class="primary-btn cart-btn cart-btn-right">PROCEED TO CHECKOUT</a>
                    </div>
                </div>
            </div>
        </div>
    </section>