@{
    Layout="~/Views/Shared/_Layout.cshtml";
}

<section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                @* <h4>Checkout</h4> *@
                <form action="#">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <h4>Customer Register</h4>
                            
                            <div class="checkout__input">
                                <p>Nome<span>*</span></p>
                                <input type="text">
                            </div> 
                            <div class="checkout__input">
                                <p>Telefone<span>*</span></p>
                                <input type="text">
                            </div>
                            <div class="checkout__input">
                                <p>E-mail<span>*</span></p>
                                <input type="text">
                            </div>
                            <div class="checkout__input">
                                <p>Password<span>*</span></p>
                                <input type="text">
                            </div>
                            <div class="row">
                                <div class="col-lg-10">
                                    <div class="checkout__input">
                                        <p>CEP<span>*</span></p>
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="checkout__input" style="float:inline-end">
                                        <p>&nbsp;</p>
                                        <button type="button" class="site-btn">PESQUISAR</button>
                                     </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Endereço<span>*</span></p>
                                <input type="text" readonly placeholder="Street Address" class="checkout__input__add">
                                <input type="text" placeholder="Apartment, suite, unite ect (optinal)">
                            </div>
                            <div class="checkout__input">
                                <p>Cidade<span>*</span></p>
                                <input type="text" readonly>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Estado<span>*</span></p>
                                        <input type="text" readonly>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>País<span>*</span></p>
                                        <input type="text" readonly>
                                    </div>
                                </div>
                            </div>
                            
                        </div>                       
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4>Your Order</h4>
                                <div class="checkout__order__products">Products <span>Total</span></div>
                                <ul>
                                    <li>3 Vegetable’s Package <span>$75.99</span></li>
                                    <li>2 Fresh Vegetable <span>$151.99</span></li>
                                    <li>10 Organic Bananas <span>$53.99</span></li>
                                </ul>
                                <div class="checkout__order__subtotal">Total <span>$750.99</span></div>
                                @* <div class="checkout__order__total">Total <span>$750.99</span></div> *@
                                <button type="submit" class="site-btn">PLACE ORDER</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>